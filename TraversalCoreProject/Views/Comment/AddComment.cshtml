@if (User.Identity.IsAuthenticated)
{
    

<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir Yorum Bırak!</h4>
        E-posta adresiniz yayımlanmayacaktır. Zorunlu alanlar işaretlenmiştir *
    <form method="post" asp-action="AddComment" asp-controller="Comment">

        <input type="hidden" name="DestinationID" value="@ViewBag.DestId" />
        <input type="hidden" name="AppUserID" value="@ViewBag.userId" />
        <div class="form-group">
            <textarea name="CommentContext" class="form-control" placeholder="Yorumunuz*" required=""
                      spellcheck="false"></textarea>
        </div>


        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorumu Gönder </button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
}
else
{
        <h2>Yorum Yapabilmek İçin Üye Olmanız Gerekmektedir.</h2>
}
